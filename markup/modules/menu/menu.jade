mixin menu()
  .row.align-justify
    .columns.shrink
      .left-logo
      .left-social.text-center
        a(href="#" title="").left-social__item
          i.icon.icon-facebook
        a(href="#" title="").left-social__item
          i.icon.icon-vk
        a(href="#" title="").left-social__item
          i.icon.icon-instagram     
    .columns.shrink
      a(href="#" aria-label="Close left" data-close).close-left
        i.icon.icon-close-delete
  .left-menu
    .left-menu__item 
      a(href="#" title="") Велосипеды
      i.icon.icon-down-open-mini
      - var data = {items: ['ВЕЛОЧОППЕРЫ', 'ШОССЕЙНЫЕ', 'ФИКСЫ', 'КРУИЗЕРЫ', 'СКЛАДНЫЕ', 'БЕГОВЕЛЫ', 'ГОРОДСКИЕ', 'ПОДРОСТКОВЫЕ', 'КОМФОРТНЫЕ','ДЕТСКИЕ']}
      +menu-drop(data)
    .left-menu__item 
      a(href="#" title="") Аксессуары
      i.icon.icon-down-open-mini
    .left-menu__item 
      a(href="#" title="") Бренды
      i.icon.icon-down-open-mini
    .left-menu__item 
      a(href="#" title="") Блог
    .left-menu__item 
      a(href="#" title="") Поддержка
      i.icon.icon-down-open-mini
    .left-menu__item 
      a(href="#" title="") Контакты

mixin menu-drop(data)
  .menu-drop
    - each val in data.items
      a(href="#" title="").menu-drop__item= val
