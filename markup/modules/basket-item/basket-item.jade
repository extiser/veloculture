mixin basket-item
  .basket-item
    .row.align-middle
      .columns
        .basket-item__img
          img(src="http://placehold.it/175x116&text=image")
      .columns.shrink
        .basket-item__model electra Cruiser 
          span Indy 3i Red (2014)
      .columns.text-center
        .basket-item__cost 59,000ла
      .columns
        .basket-item-count.productCount
          .basket-item-count__control.productCountPlus
            i.icon.icon-up-open-mini
          input(type="text" value="1").basket-item-count__value.productCountValue
          .basket-item-count__control.productCountMinus
            i.icon.icon-down-open-mini
      .columns.text-center
        .basket-item__cost 59,000ла
      .columns.shrink
        a(href="#" title="").basket-item__delete
          i.icon.icon-times